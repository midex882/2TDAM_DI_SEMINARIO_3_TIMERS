<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent"
    android:gravity="center_horizontal">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/hourglass"
        android:gravity="top"></pl.droidsonroids.gif.GifImageView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ejercicio1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="ejercicio 1"
        android:layout_margin="5dp"
        ></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ejercicio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="ejercicio 2"
        android:layout_margin="5dp"
        ></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ejercicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="ejercicio 3"
        android:layout_margin="5dp"
        ></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>